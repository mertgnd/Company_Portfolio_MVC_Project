@using EntityLayer.Entities
@model List<Address>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Address Informations</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Address</th>
                            <th>City</th>
                            <th>Country</th>
                            <th>Phone</th>
                            <th>Mail</th>
                            <th>MapInfo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                        {
                            <tr>
                                <td colspan="5" class="text-center text-danger">Address informations couldnt found.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Adress</td>
                                    <td>@item.City</td>
                                    <td>@item.Country</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Mail</td>
                                    <td>@item.Mapinfo</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <br />
            @foreach (var item in Model)
            {
                <a href="/Address/UpdateAddress/@item.AddressId" class="btn btn-outline-success">Update</a>
            }
        </div>
    </div>
</div>
