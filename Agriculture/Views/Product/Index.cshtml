@using EntityLayer.Entities
@model List<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Products & Amounts</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Product Name</th>
                            <th>Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                        {
                            <tr>
                                <td colspan="5" class="text-center text-danger">Products couldnt found.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.ProductName</td>
                                    <td>@item.ProductValue</td>
                                    <td>
                                        <a href="/Product/DeleteProduct/@item.Id" class="btn btn-outline-danger">Delete</a>
                                        <a href="/Product/UpdateProduct/@item.Id" class="btn btn-outline-success">Update</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Product/AddProduct/" class="btn btn-outline-info">Add Product</a>
            </div>
        </div>
    </div>
</div>