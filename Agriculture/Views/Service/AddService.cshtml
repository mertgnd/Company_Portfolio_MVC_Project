@model AgriculturePresentation.Models.ServiceAddViewModel
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add New Service</h4>
            <form method="post">
                <div class="form-group">
                    <label>Title</label>
                    <br />
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Title">
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <br />
                    <span asp-validation-for="Image" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Image" >
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Description</label>
                    <br />
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-info">Save</button>
                <a href="/Service/Index/" class="btn btn-outline-warning">Cancel</a>
            </form>
        </div>
    </div>
</div>