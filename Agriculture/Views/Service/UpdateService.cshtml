@model EntityLayer.Entities.Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Service</h4>
            <form method="post">
                @Html.HiddenFor(x => x.ServiceID)
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" class="form-control" asp-for="Title">
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <input type="text" class="form-control" asp-for="Image">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Description</label>
                    <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-info">Update</button>
                <a href="/Service/Index/" class="btn btn-outline-warning">Cancel</a>
            </form>
        </div>
    </div>
</div>