@using EntityLayer.Entities
@model List<Gallery>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Image List</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>   
                        @if (Model.Count == 0)
                        {
                        <tr>
                            <td colspan="5" class="text-center text-danger">Gallery Images couldnt found.</td>
                        </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td class="py-1">
                                    <img src="@item.ImageUrl" alt="image" />
                                </td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>
                                        <a href="/Gallery/DeleteGallery/@item.GalleryID" class="btn btn-outline-danger">Delete</a>
                                        <a href="/Gallery/UpdateGallery/@item.GalleryID" class="btn btn-outline-success">Update</a>
                                </td>
                            </tr>
                            }
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Gallery/AddGallery/" class="btn btn-outline-info">Add Image</a>
            </div>
        </div>
    </div>
</div>