@using EntityLayer.Entities
@model List<Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Announcements</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                        {
                            <tr>
                                <td colspan="5" class="text-center text-danger">Announcement couldnt found.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.AnnouncementID</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>@item.Date.ToShortDateString()</td>
                                    <td>@item.Status</td>
                                    <td>
                                        <a href="/Announcement/DeleteAnnouncement/@item.AnnouncementID" style="padding: 10px;font-size:10px" class="btn btn-outline-danger">Delete</a>
                                        <a href="/Announcement/UpdateAnnouncement/@item.AnnouncementID" style="padding: 10px;font-size:10px" class="btn btn-outline-success">Update</a>
                                        @if(item.Status == false)
                                        {
                                            <a href="/Announcement/ChangeStatusToTrue/@item.AnnouncementID" style="padding: 10px;font-size:10px" class="btn btn-outline-warning">Activate</a>
                                        }
                                        else
                                        {
                                            <a href="/Announcement/ChangeStatusToFalse/@item.AnnouncementID" style="padding: 10px;font-size:10px" class="btn btn-outline-secondary">DeActivate</a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Announcement/AddAnnouncement/" class="btn btn-outline-info">Add Announcement</a>
            </div>
        </div>
    </div>
</div>