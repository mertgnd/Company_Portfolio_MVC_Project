@using EntityLayer.Entities
@model List<SliderLogo>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Slider - Logo Images</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Logo Image</th>
                            <th>Slider Image</th>
                            <th>PopUp Image</th>
                            <th>Slider Title</th>
                            <th>Slider Desc.</th>
                            <th>PopUp Title</th>
                            <th>PopUp S.Title</th>
                            <th>PopUp Desc.</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Model.Count == 0){
                            <tr>
                                <td colspan="5" class="text-center text-danger">Data couldnt found.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="@item.ImageUrlLogo" alt="image" />
                                    </td>
                                    <td class="py-1">
                                        <img src="@item.ImageUrlSlider" alt="image" />
                                    </td>
                                    <td class="py-1">
                                        <img src="@item.ImageUrlPopUp" alt="image" />
                                    </td>
                                    <td>@item.SliderTitle</td>
                                    <td>@item.SliderDescription</td>
                                    <td>@item.PopUpTitle</td>
                                    <td>@item.PopUpSubTitle</td>
                                    <td>@item.PopUpDescription</td>
                                    <td>
                                        <a href="/SliderLogo/UpdateSliderLogo/@item.Id" class="btn btn-outline-success">Update</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>